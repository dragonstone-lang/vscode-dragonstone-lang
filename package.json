{
    "name":                         "dragonstone-lang",
    "displayName":                  "Dragonstone Language",
    "description":                  "The Dragonstone Programming Language",
    "version":                      "1.0.0",
    "publisher":                    "dragonstone",
    "icon":                         "index/icons/dragonstone.png",
    "galleryBanner": {
		"color":                    "#1D1D1D",
		"theme":                    "dark"
	},
	"license":                      "MIT",
    "repository": {
		"type":                     "git",
		"url":                      "https://github.com/dragonstone-lang/vscode-dragonstone-lang"
	},
    "bugs":                         "https://github.com/dragonstone-lang/vscode-dragonstone-lang/issues",
    "engines": {
        "vscode":                   "^1.105.0"
    },
    "keywords": [
        "dragonstone",
        "syntax",
        "languages"
	],
    "categories": [
        "Programming Languages",
        "Snippets",
        "Themes",
        "Formatters",
        "Keymaps"
    ],
    "main": "./dist/extension.js",
    "activationEvents": [
        "onLanguage:dragonstone"
    ],
    "contributes": {
        "languages": [
            {
                "id":               "dragonstone",
                "aliases":          [ "Dragonstone", "dragonstone" ],
                "extensions":       [ ".ds" , ".dragonstone" ],
                "configuration":    "./dragonstone-config.json"
            },
            {
                "id":               "embedded-dragonstone",
                "aliases":          [ "Embedded Dragonstone" , "embedded dragonstone", "embedded-dragonstone" ],
                "extensions":       [ ".eds" ],
                "configuration":    "./dragonstone-embedded-config.json"
            },
            {
                "id":               "dragonstone-forge",
                "aliases":          [ "Dragonstone Forge", "dragonstone forge", "dragonstone-forge" ],
                "extensions":       [ ".forge" ],
                "configuration":    "./dragonstone-forge-config.json"
            }
        ],
        "grammars": [
            {
                "language":         "dragonstone",
                "scopeName":        "source.dragonstone",
                "path":             "./syntaxes/dragonstone.tmLanguage.json"
            },
            {
                "language":         "embedded-dragonstone",
                "scopeName":        "source.dragonstone-embedded",
                "path":             "./syntaxes/dragonstone-embedded.tmLanguage.json"
            },
            {
                "language":         "dragonstone-forge",
                "scopeName":        "source.dragonstone-forge",
                "path":             "./syntaxes/dragonstone-forge.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command":          "dragonstone.toggleLsp",
                "title":            "Toggle Language Server",
                "category":         "Dragonstone"
            },
            {
                "command":          "dragonstone.enableLsp",
                "title":            "Enable Language Server",
                "category":         "Dragonstone"
            },
            {
                "command":          "dragonstone.disableLsp",
                "title":            "Disable Language Server",
                "category":         "Dragonstone"
            }
        ],
        "configuration": {
            "title":                "Dragonstone",
            "properties": {
                "dragonstone.lsp.enabled": {
                    "type":         "boolean",
                    "default":      true,
                    "description":  "Enable or disable the Dragonstone Language Server"
                }
            }
        }
    },
    "scripts": {
        "build": "tsc -p . && npm --prefix server run build",
        "watch": "tsc -w -p .",
        "build:server": "npm --prefix server run build",
        "watch:server": "npm --prefix server run watch",
        "postinstall": "npm --prefix server install",
        "vscode:prepublish": "npm run build"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    },
    "devDependencies": {
        "typescript": "^5.5.0",
        "@types/vscode": "^1.105.0",
        "@types/node": "^20.0.0"
    }
}
